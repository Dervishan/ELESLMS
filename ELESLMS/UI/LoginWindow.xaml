<Window x:Class="ELESLMS.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ELESLMS.UI"
        mc:Ignorable="d"
        Title="ELESLMS" Height="720" Width="1280" ResizeMode="CanMinimize">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" SpreadMethod="Pad">
            <GradientStop Color="Black"/>
            <GradientStop Color="White" Offset="0.169"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">ELESLMS</TextBlock>
        <TextBlock Grid.Row="0" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="14,0,0,0">Elementary School Learning Management System</TextBlock>
        <Frame x:Name="LoadFrame" Grid.Row="2"/>
    </Grid>
</Window>
